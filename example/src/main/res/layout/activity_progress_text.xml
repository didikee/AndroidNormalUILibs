<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_progress_text"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.didikee.example.act.ProgressTextActivity">

    <com.didikee.uilibs.views.WaitFinishTextView
        android:id="@+id/tv_wait"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/md_ripple_white"
        android:text="点我啊"/>
    <TextView
        android:id="@+id/tv_wait_finish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/md_ripple_white"
        android:text="完成"/>

</LinearLayout>
