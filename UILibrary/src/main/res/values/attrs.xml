<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--xedittext-->
    <declare-styleable name="XEditText">
        <attr name="inner_background" format="reference"/>
    </declare-styleable>

    <!--ProgressShowView-->
    <declare-styleable name="ProgressShowView">
        <attr name="color_up" format="color"/>
        <attr name="color_down" format="color"/>
    </declare-styleable>

    <!--HorizontalItemView-->
    <declare-styleable name="HorizontalItemView">
        <attr name="leftImage_src" format="reference"/>
        <attr name="rightImage_src" format="reference"/>
        <attr name="leftText_text" format="string"/>
        <attr name="rightText_text" format="string"/>
        <attr name="leftImage_marginLeft" format="dimension"/>
        <attr name="rightImage_marginRight" format="dimension"/>
        <attr name="leftText_marginLeft" format="dimension"/>
        <attr name="rightText_marginRight" format="dimension"/>
        <attr name="leftText_textColor" format="color"/>
        <attr name="rightText_textColor" format="color"/>
        <attr name="leftText_textSize" format="dimension"/>
        <attr name="rightText_textSize" format="dimension"/>
        <attr name="line_gravity" format="enum">
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
            <enum name="top" value="48"/>
            <enum name="bottom" value="80"/>
        </attr>
        <attr name="line_marginStart" format="dimension"/>
        <attr name="line_marginEnd" format="dimension"/>
        <attr name="line_color" format="color"/>
        <attr name="line_strokeWidthPx" format="integer"/>
        <!--size-->
        <attr name="leftImage_width" format="dimension|enum">
            <enum name="wrap_content" value="-2"/>
            <enum name="match_parent" value="-1"/>
        </attr>
        <attr name="rightImage_width" format="dimension|enum">
            <enum name="wrap_content" value="-2"/>
            <enum name="match_parent" value="-1"/>
        </attr>
        <attr name="leftImage_height" format="dimension|enum">
            <enum name="wrap_content" value="-2"/>
            <enum name="match_parent" value="-1"/>
        </attr>
        <attr name="rightImage_height" format="dimension">
            <enum name="wrap_content" value="-2"/>
            <enum name="match_parent" value="-1"/>
        </attr>
    </declare-styleable>

    <!--ImageTextView-->
    <declare-styleable name="ImageTextView">
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textGravity" format="enum">
            <enum name="LEFT" value="0"/>
            <enum name="CENTER" value="1"/>
            <enum name="RIGHT" value="2"/>
        </attr>
        <attr name="textBold" format="boolean"/>
    </declare-styleable>

    <!--XTransparentTitleView-->
    <declare-styleable name="XTransparentTitleView">
        <attr name="TitleLayout" format="reference"/>
        <attr name="ScrollViewInnerLayout" format="reference"/>
        <attr name="BottomLayout" format="reference"/>
    </declare-styleable>
</resources>